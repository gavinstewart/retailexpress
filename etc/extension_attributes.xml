<?xml version="1.0"?>

<!-- @todo Maybe use more specific ACL nodes? -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">

    <!-- Add a SkyLink Order ID to Magento Orders -->
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="skylink_order_id" type="RetailExpress\SkyLink\Api\Data\Sales\Orders\SkyLinkOrderIdInterface">
            <resources>
                <resource ref="RetailExpress_SkyLink::skylink"/>
            </resources>
        </attribute>
    </extension_attributes>

    <!-- Add a SkyLink Payment ID to Magento Invoices -->
    <extension_attributes for="Magento\Sales\Api\Data\InvoiceInterface">
        <attribute code="skylink_payment_id" type="RetailExpress\SkyLink\Api\Data\Sales\Invoices\SkyLinkPaymentIdInterfae">
            <resources>
                <resource ref="RetailExpress_SkyLink::skylink"/>
            </resources>
        </attribute>
    </extension_attributes>

    <!-- Add a SkyLink Fulfillment Batch ID to Magento Shipments -->
    <extension_attributes for="Magento\Sales\Api\Data\ShipmentInterface">
        <attribute code="skylink_fulfillment_batch_id" type="RetailExpress\SkyLink\Api\Data\Sales\Shipments\SkyLinkFulfillmentBatchIdInterface">
            <resources>
                <resource ref="RetailExpress_SkyLink::skylink"/>
            </resources>
        </attribute>
    </extension_attributes>

</config>
